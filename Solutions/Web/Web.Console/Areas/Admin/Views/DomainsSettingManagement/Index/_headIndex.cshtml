    <script type="text/javascript">
    @{
        if (ViewData["CustomUsersVMList"] != null)
        {
            List<CustomUsersVM> customUsersVMList =
                (List<CustomUsersVM>)ViewData["CustomUsersVMList"];

            var customUsersVMListData = customUsersVMList.Select(c =>
                      new
                      {
                                  /*text = c.FullNumber + " - " + c.FarsiName,
                                  slug = c.FullNumber + " - " + c.FarsiName,
                                  id = c.Id*/
                          DisplayText = (string.IsNullOrEmpty(c.Name) ? "" : c.Name + " - ") +
                          (string.IsNullOrEmpty(c.Family) ? "" : c.Family + " - ") +
                          c.UserName,
                          Value = c.UserId
                      });

            @Html.Raw("var customUsersVMList = " +
                JsonConvert.DeserializeObject(JsonConvert.SerializeObject(customUsersVMListData)) + ";");
        }
    }
    </script>

