<form class="col-12" data-ajax-begin="OnBegin" data-ajax-complete="OnComplete"
      data-ajax-failure="OnFailed" data-ajax-success="OnSuccess"
      data-ajax="true" data-ajax-method="POST">
    @Html.AntiForgeryToken()
    <div class="form-group col col-md-12">
        @{
            <div id='error-alert' class="form-group alert alert-danger">
            </div>
        }
    </div>
    <div class="row">
        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3">
            <div>
                دامنه
            </div>
            <select id="slcDomainSettingId" name="slcDomainSettingId"
                    class="form-control ml-3 chosen-select input-validation-error"></select>

        </div>
        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3 ">
            <div>
                نقش
            </div>
            <select id="slcRoleIds" name="slcRoleIds" multiple
                    class="form-control ml-3  input-validation-error"></select>

        </div>

        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3 ">
            <div>
                دسترسی
            </div>
            <select id="slcLevelIds" name="slcLevelIds" multiple
                    class="form-control ml-3  input-validation-error"></select>

        </div>
        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3 ">
            <div class="mr-1">
                آپدیت ماژولهای قبلی
            </div>
            <div class="checkbox">
                <label for="updateOldModule">
                    <input type="checkbox" id="updateOldModule" name="updateOldModule"
                           value="true" class="form-control input-sm ml-2" />
                    <span class="mr-5">فعال</span>
                </label>
            </div>
        </div>
        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3 ">
            <div class="mr-1">
                ساخت مجدد منو
            </div>
           <div class="checkbox">
                <label for="reCreateMenus">
                    <input type="checkbox" id="reCreateMenus" name="reCreateMenus"
                           value="true" class="form-control input-sm ml-2" />
                    <span class="mr-5">فعال</span>
                </label>
            </div>
        </div>
        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3 ">
            <div class="mr-1">
                 ساخت مجدد منو برای کاربر
            </div>
            <div class="checkbox">
                <label for="reCreateMenusForUsers">
                    <input type="checkbox" id="reCreateMenusForUsers" name="reCreateMenusForUsers" value="true" class="form-control input-sm ml-2">
                    <span class="mr-5">فعال</span>
                </label>
            </div>
        </div>
    
    </div>
     <div class="ln_solid"></div>
        <div class="form-group row">
            <div class="col-md-9 col-sm-9  offset-md-3">
                <button type="submit" class="btn btn-success btn-md">ثبت</button>
      @*          <button class="btn btn-primary btn-md" type="reset">پاک کردن فرم</button>*@
                <button type="button" class="btn btn-primary btn-md">لغو</button>


            </div>
        </div>
</form>
