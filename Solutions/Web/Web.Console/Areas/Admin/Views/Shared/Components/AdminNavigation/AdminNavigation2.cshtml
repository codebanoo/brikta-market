                            var arrow = _this.find('.ui-accordion-header-icon');
                            $(arrow).removeClass('ui-icon-triangle-1-e');
                            $(arrow).addClass('ui-icon-triangle-1-w');
                        });
                        var _this = $(this);
                        var arrow = _this.find('.ui-accordion-header-icon');
                        $(arrow).removeClass('ui-icon-triangle-1-w');
                        $(arrow).addClass('ui-icon-triangle-1-s');
