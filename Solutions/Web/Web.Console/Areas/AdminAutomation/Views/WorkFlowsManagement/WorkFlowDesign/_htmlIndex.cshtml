<div class="modal fade" id="showFieldsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="direction: rtl;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="addModalLabel">فیلدها</h4>
            </div>
            <div class="modal-body" style="padding: 20px 20px 0 !important;">
                <form id="addFieldsForm">
                    <div class="form-group m-t-lg">
                        <div>
                            <label>انتخاب فیلد:</label>
                        </div>
                        <select id="slcFields" class="form-control" name="slcFields">
                        </select>
                    </div>
                    <input type="submit" id="submit_add_fields" style="display:none;" />
                </form>
            </div>
            <div class="modal-footer" style="border-top: none">
                <button class="btn btn-default btn-primary" data-dismiss="modal">لغو</button>
                <button class="btn btn-primary" id="add_fields" style="margin:0;">ثبت</button>
            </div>
        </div>
    </div>
</div>

