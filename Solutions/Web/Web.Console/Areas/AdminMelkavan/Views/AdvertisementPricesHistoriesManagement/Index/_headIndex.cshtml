@using Newtonsoft.Json;

<script type="text/javascript">
    @{
        AdvertisementVM advertisement = new AdvertisementVM();
        @Html.Raw("var advertisement;")
        ;

        if (ViewData["Advertisement"] != null)
        {
            advertisement = (AdvertisementVM)ViewData["Advertisement"];

            @Html.Raw("debugger; advertisement =" + JsonConvert.DeserializeObject(JsonConvert.SerializeObject(advertisement)) + " ;debugger;")
            ;
        }
    }

</script>




