@using VM.Melkavan
@using VM.Teniaco;


@{
    AdvertisementVM advertisement = new AdvertisementVM();

    if (ViewData["Advertisement"] != null)
    {
        advertisement = (AdvertisementVM)ViewData["Advertisement"];

    }
}

<div id="searchBlock" class="col-12">
     <div class="row">
        <div class="col-md-3 col-xs-12 col-sm-12 col-lg-3 col-xl-3">
            <div>
                عنوان ملک:
                @Html.Raw(advertisement.AdvertisementTitle)
            </div>
        </div>
        <div class="col-md-3 col-xs-12 col-sm-12 col-lg-3  col-xl-3">
            <div>
                نام استان:
                @Html.Raw(advertisement.AdvertisementAddressVM.StateName != null ? advertisement.AdvertisementAddressVM.StateName : "")
            </div>
        </div>
        <div class="col-md-3 col-xs-12 col-sm-12 col-lg-3  col-xl-3">
            <div>
                نام شهر:
                @Html.Raw(advertisement.AdvertisementAddressVM.CityName != null ? advertisement.AdvertisementAddressVM.CityName : "")
            </div>
        </div>
        <div class="col-md-3 col-xs-12 col-sm-12 col-lg-3  col-xl-3">
            <div>
                نام منطقه:
                @Html.Raw(advertisement.AdvertisementAddressVM.ZoneName != null ? advertisement.AdvertisementAddressVM.ZoneName : "")
            </div>
        </div>
    </div>
</div>
<hr class="full-splitter" />
<div id="listContainer"></div>