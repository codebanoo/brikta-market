@* مدال ویرایش عکس و فیلم *@
<div class="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="showIn-melkavanPictures-modal">
    <div class="modal-dialog modal-lg">
        <form method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="modal-content">
                <div class="modal-header justify-content-start">
                    <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title col-12" id="myModalLabel">ویرایش عکس و آگهی</h4>
                    <input value="" id="AdvertisementId-melkavan" style="display:none;" />
                </div>
                <div class="modal-body">


                    <div class="row mt-5 mr-5">
                        <label style="margin-bottom: 1rem;color:gray;">آگهی‌های دارای عکس تا «4 برابر» بیشتر توسط کاربران دیده می‌شوند.</label>
                    </div>

                    <div class="row bg-white rounded-4 border-primary-dotted py-3 ps-3 upload-file mb-3 pe-3 mt-4 mr-5 mb-5" style="padding-bottom:0px !important;">

                        <div id="dz-main" class="drop-zone">
                            <label class="form-label mb-1 titles" style="color: gray; cursor:pointer;" id="mainImage">عکس اصلی</label>
                            <span class="mdi mdi-image-plus footer-bottom-nav-span-mdi" style="font-size:5rem;color: gray;" id="drop-zone__prompt"></span>
                            <input accept=".png, .jpg, .jpeg, .webp" type="file" name="myFile" class="main-Image d-none" id="main-img-input">
                            <span class="text-danger"></span>
                        </div>
                        <div class="upload__box">
                            <label class="form-label mb-1 titles" style="color: gray; cursor:pointer;">عکس فرعی</label>
                            <label class="upload__btn">
                                <span class="mdi mdi-image-plus footer-bottom-nav-span-mdi" style="font-size:5rem;color: gray;" id="addMultipleImage"></span>
                            </label>

                            <input type="file" multiple data-max_length="9" id="other-Images">
                            <span class="text-danger"></span>

                        </div>

                    </div>

                    <div class="row">
                        <div class="upload__img-wrap mr-5"></div>
                    </div>


                </div>
                <div class="modal-footer justify-content-start">
                    <button type="button" class="btn btn-success btn-sm" id="modal-btn-yes-melkavanPictures">ثبت</button>
                </div>
            </div>
        </form>

    </div>
</div>

@* مدال تغییر وضعیت *@
<div class="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="showIn-melkavanStatus-modal">
    <div class="modal-dialog modal-md">
        <form method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="modal-content">
                <div class="modal-header justify-content-start">
                    <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title col-12" id="myModalLabel">تغییر وضعیت</h4>
                    <input value="" id="AdvertisementId-melkavan2" style="display:none;" />
                </div>
                <div class="modal-body">


                    <div class="form-check mb-1">
                        <input class="form-check-input" type="radio" name="Status" value="2" id="Reject">
                        <label class="form-check-label" for="Reject">
                            رد
                        </label>
                    </div>
                    <div class="form-check mb-1">
                        <input class="form-check-input" type="radio" name="Status" value="1" id="Confirm" checked>
                        <label class="form-check-label" for="Confirm">
                            تایید
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Status" value="3" id="Pending" checked>
                        <label class="form-check-label" for="Pending">
                            در انتظار تعیین وضعیت
                        </label>
                    </div>

                    <div class="d-none" id="rejectionDiv">
                        <label class="mt-5">علت رد آگهی</label>
                        <textarea id="rejectionReason" class="form-control"></textarea>
                    </div>


                </div>
                <div class="modal-footer justify-content-start">
                    <button type="button" class="btn btn-success btn-sm" id="modal-btn-yes-melkavanStatus">ثبت</button>
                </div>
            </div>
        </form>

    </div>
</div>

