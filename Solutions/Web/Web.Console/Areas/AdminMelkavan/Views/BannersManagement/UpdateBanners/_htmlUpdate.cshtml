@using VM.Teniaco;
<form class="col-12" data-ajax-begin="OnBegin" data-ajax-complete="OnComplete" data-ajax-failure="OnFailed" data-ajax-success="OnSuccess"
      data-ajax="true" data-ajax-method="POST">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="row text-center justify-content-center">
        <div class="form-group w-100">
            @{
                        <div class="alert alert-danger alert-dismissible " id="error-alert" style="display: block;" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close">  <span aria-hidden="true">×</span></button> </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-md-4 col-xs-12 col-sm-12 col-lg-4 my-3 ">
            <div class="mx-2">
                تصویر قبلی
            </div>
            <img id="image" src="" style="width:340px; height:100px;"/>

        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 col-md-6 col-xs-12 col-sm-12 col-lg-6 my-3 ">
            <div class="mx-2">
                عنوان
            </div>
            <input type="text" id="BannerTitle" name="BannerTitle" class="form-control "
                   placeholder="عنوان" />
        </div>
        <div class="col-xl-4 col-md-6 col-xs-12 col-sm-12 col-lg-6 my-3 ">
            <div class="mx-2">
فایل (سایز بهینه 170 در 50 می‌باشد)
            </div>
            <input type="file" id="file" name="file" class="no-top-margin" style="margin-top : 0px !important"
                   placeholder="فایل" />
        </div>
        <div class="col-xl-4 col-md-6 col-xs-12 col-sm-12 col-lg-6 my-3 ">
            <div class="mr-1">
                فعال
            </div>
            <div class="checkbox">
                <label for="IsActivated" id="IsActivatedLabel">
                    <input type="checkbox" id="IsActivated" name="IsActivated" class="form-control input-sm ml-2">
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 col-md-6 col-xs-12 col-sm-12 col-lg-6 my-3 ">
            <div class="mx-2">
                مرتب سازی
            </div>
            <input type="number" id="BannerFileOrder" name="BannerFileOrder" class="form-control"
                   placeholder="مرتب سازی" value="0" />
        </div>
        <div class="col-xl-4 col-md-6 col-xs-12 col-sm-12 col-lg-6 my-3 ">
            <div class="mx-2">
                لینک
            </div>
            <input type="text" id="BannerLink" name="BannerLink" class="form-control "
                   placeholder="لینک" />
        </div>
        <div class="col-xl-4 col-md-6 col-xs-12 col-sm-12 col-lg-6 my-3 ">
            <div class="mr-1">
                حذف شده
            </div>
            <div class="checkbox">
                <label for="IsDeleted" id="IsDeletedLabel">
                    <input type="checkbox" id="IsDeleted" name="isDeleted" class="form-control input-sm ml-2">
                </label>
            </div>
        </div>
    </div>

    <div class="ln_solid"></div>

    <div class="form-group row">
        <div class="col-md-9 col-sm-9  offset-md-3">
            <button type="submit" id="btnSubmit" class="btn btn-success btn-md">ثبت</button>
            <button class="btn btn-primary btn-md" type="reset">پاک کردن فرم</button>
            <button id="btnCancel" type="button" class="btn btn-primary btn-md">لغو</button>
        </div>
    </div>
</form>