@using VM.Public;
@using Newtonsoft.Json

<script type="text/javascript">
    @{
        List<UnitsOfMeasurementVM> unitsOfMeasurementVMList = new List<UnitsOfMeasurementVM>();

        @Html.Raw("var unitsOfMeasurementList = [];")
        ;

        if (ViewData["UnitsOfMeasurementList"] != null)
        {
            unitsOfMeasurementVMList = (List<UnitsOfMeasurementVM>)ViewData["UnitsOfMeasurementList"];

            var unitsOfMeasurementVMListData = unitsOfMeasurementVMList.Select(c =>
            new
            {
                DisplayText = $"{c.UnitOfMeasurementTitle}",
                Value = c.UnitOfMeasurementId
            });

            @Html.Raw(" unitsOfMeasurementList = " +
        JsonConvert.DeserializeObject(JsonConvert.SerializeObject(unitsOfMeasurementVMListData)) + "; ")
            ;
        }
    }
</script>

