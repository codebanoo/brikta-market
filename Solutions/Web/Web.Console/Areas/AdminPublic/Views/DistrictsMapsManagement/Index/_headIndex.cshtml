@using VM.Public;
@using Newtonsoft.Json;

<script type="text/javascript">
    @{
        DistrictsVM districtsList = new DistrictsVM();

        @Html.Raw("var districtsList;")
        ;

        if (ViewData["DistrictsList"] != null)
        {
            districtsList = ViewData["DistrictsList"] as DistrictsVM;

            @Html.Raw("debugger; districtsList = " +
        JsonConvert.DeserializeObject(JsonConvert.SerializeObject(districtsList)) + "; debugger;")
            ;
        }
    }
</script>

<script type="text/javascript">
    @{
        string domainName = "";

                @Html.Raw("var domainName;")
        ;

        if (ViewData["DomainName"] != null)
        {
            domainName = ViewData["DomainName"] as string;

                    @Html.Raw("debugger; domainName = '" + domainName + "'; debugger;")
            ;
        }
    }
</script>

