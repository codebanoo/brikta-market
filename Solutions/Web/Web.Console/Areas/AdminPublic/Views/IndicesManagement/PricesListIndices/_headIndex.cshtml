@using VM.Public;
@using VM.Teniaco;
@using Newtonsoft.Json;

@{
    //@await Component.InvokeAsync("JTableCssJs")
    await Html.RenderPartialAsync("jTableCssJs");
}
 <script type="text/javascript">
    @{
        List<IndicesVM> IndicesListoption = new List<IndicesVM>();

                                                @Html.Raw("var IndicesListoption = [];");

        if (ViewData["IndicesList"] != null)
        {
            IndicesListoption = (List<IndicesVM>)ViewData["IndicesList"];

            var IndicesListData = IndicesListoption.Select(c =>
            new
            {
                DisplayText = c.Name,
                Value = c.IndiceId
            });

                                                    @Html.Raw("debugger; IndicesListoption = " +
                JsonConvert.DeserializeObject(JsonConvert.SerializeObject(IndicesListData)) + "; debugger;");
        }
    }
</script>


