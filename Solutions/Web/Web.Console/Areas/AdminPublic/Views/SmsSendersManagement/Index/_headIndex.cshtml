<script type="text/javascript">
    @{
        List<SmsSendersVM> smsSendersList = new List<SmsSendersVM>();
        @Html.Raw("var smsSendersList =[];")
        ;

        if (ViewData["SmsSendersList"] != null)
        {
            smsSendersList = (List<SmsSendersVM>)ViewData["SmsSendersList"];

            var smsSendersListData = smsSendersList.Select(a =>

                new
                {
                DisplayText = $"{a.SmsSenderTitle}",
                Value = a.SmsSenderId
                });

            @Html.Raw("debugger; smsSendersList =" +JsonConvert.DeserializeObject(JsonConvert.SerializeObject(smsSendersListData))+" ;debugger;")
            ;
        }
    }

</script>



