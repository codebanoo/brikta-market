@using VM.Public;
@using Newtonsoft.Json;

<script type="text/javascript">
    @{
        ZonesVM zonesList = new ZonesVM();

        @Html.Raw("var zonesList;")
        ;

        if (ViewData["ZonesList"] != null)
        {
            zonesList = ViewData["ZonesList"] as ZonesVM;

            @Html.Raw(" zonesList = " +
        JsonConvert.DeserializeObject(JsonConvert.SerializeObject(zonesList)) + "; ")
            ;
        }
    }
</script>

<script type="text/javascript">
    @{
        string domainName = "";

                @Html.Raw("var domainName;")
        ;

        if (ViewData["DomainName"] != null)
        {
            domainName = ViewData["DomainName"] as string;

                    @Html.Raw(" domainName = '" + domainName + "'; ")
            ;
        }
    }
</script>

