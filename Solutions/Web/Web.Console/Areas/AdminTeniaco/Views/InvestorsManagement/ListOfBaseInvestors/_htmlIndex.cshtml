@using VM.Public;

<div id="searchBlock">
    <div class="row">
        <div class="col col-md-3 col-xs-12 col-sm-12 col-lg-3">
            <div>
                <label>
                    نام سرمایه گذار
                </label>
            </div>
            <select id="slcPersonId" name="slcPersonId" class="form-control input-sm chosen-select"
                    placeholder="نام سرمایه گذار">
                <option value="" selected>---</option>
            </select>
        </div>
        <div class="col col-md-3 col-xs-12 col-sm-12 col-lg-3">
            <div>
                <label>
                    نام شرکت
                </label>
            </div>
            <input id="txtCompanyName" name="txtCompanyName" class="form-control input-sm"
                   placeholder="نام شرکت" />
        </div>
    </div>
    <div class="row">
        <div class="col col-md-4 col-xs-12 col-sm-12 col-lg-4">
            <div class="empty-block">&nbsp;</div>
            <button id="btnSearch" name="btnSearch" class="btn btn-default input-sm">
                جستجو
            </button>
            <button id="btnReload" name="btnReload" class="btn btn-default input-sm" data-toggle="tooltip" data-placement="top"
                    title="بارگذاری مجدد">
                <i class="fa fa-refresh"></i>
            </button>
            <button id="btnReset" name="btnReset" class="btn btn-default input-sm" data-toggle="tooltip" data-placement="top"
                    title="خالی کردن فرم">
                <i class="fa fa-undo"></i>
            </button>
        </div>
    </div>
    <div class="col col-md-2 col-xs-2 col-sm-2 col-lg-2">
        &nbsp;
    </div>
</div>
<hr class="full-splitter" />
<div id="listContainer"></div>