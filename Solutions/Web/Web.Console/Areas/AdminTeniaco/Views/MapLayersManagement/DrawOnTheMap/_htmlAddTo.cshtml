@using VM.Teniaco;

<form onsubmit="return false;">
               <div class="row text-center justify-content-center">
        <div class="form-group w-100">
            @{
                <div class="alert alert-danger alert-dismissible " id="error-alert" style="display: block;" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close">  <span aria-hidden="true">×</span></button> </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="form-group col col-md-3 col-xs-12 col-sm-12 col-lg-3">
            <div>
                <label>
                    نوع دسته بندی
                </label>
            </div>
            <select id="slcMapLayerCategoryId" name="slcMapLayerCategoryId" class="form-control input-sm chosen-select"
                    placeholder="نوع دسته بندی">
                <option value="" selected>---</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group col col-md-4 col-lg-4 col-xs-12 col-sm-12">
            <label class="col-lg-12">
                &nbsp;
            </label>
            <button id="btnSubmit" name="btnSubmit" class="btn btn-default input-sm" type="submit">
                ارسال
            </button>
            <button id="btnReset" name="btnReset" class="btn btn-default input-sm" data-toggle="tooltip" data-placement="top"
                    title="پاک کردن فرم">
                <i class="fa fa-undo"></i>
            </button>
        </div>
    </div>
    <div class="row">
        <div id="map" class="col col-md-6 col-lg-6"></div>
        <div id="mapRight" class="col col-md-6 col-lg-6"></div>
    </div>
</form>