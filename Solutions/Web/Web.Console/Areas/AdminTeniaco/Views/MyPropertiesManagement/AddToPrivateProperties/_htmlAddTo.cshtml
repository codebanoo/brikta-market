@using VM.Teniaco;

@model MyPropertiesVM


<form data-ajax-begin="OnBegin" data-ajax-complete="OnComplete"
      data-ajax-failure="OnFailed" data-ajax-success="OnSuccess"
      data-ajax="true" data-ajax-method="POST">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
               <div class="row text-center justify-content-center">
        <div class="form-group w-100">
            @{
                <div id="error-alert" class="form-group alert alert-danger" style="display: block;"></div>
            }
        </div>
    </div>
    <div class="row roundedBlock">
        <label>
            اطلاعات پایه
        </label>
        <div class="row">
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="PropertyCodeName">
                        عنوان ملک
                    </label>
                </div>
                <input asp-for="PropertyCodeName" class="form-control input-sm"
                       placeholder="عنوان ملک" />
                <span asp-validation-for="PropertyCodeName" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="PropertyTypeId">
                        نوع ملک
                    </label>
                </div>
                <select asp-for="PropertyTypeId" class="form-control input-sm"
                        placeholder="نوع ملک">
                    <option value="">---</option>
                </select>
                <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="TypeOfUseId">
                        نوع کاربری
                    </label>
                </div>
                <select asp-for="TypeOfUseId" class="form-control input-sm"
                        placeholder="نوع کاربری">
                    <option value="">---</option>
                </select>
                <span asp-validation-for="TypeOfUseId" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="DocumentTypeId">
                        نوع سند
                    </label>
                </div>
                <select asp-for="DocumentTypeId" class="form-control input-sm"
                        placeholder="نوع سند">
                    <option value="">---</option>
                </select>
            </div>
            @*            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
            <div>
            <label>
            نوع مالکیت
            </label>
            </div>
            <select asp-for="DocumentOwnershipTypeId" class="form-control input-sm"
            placeholder="نوع مالکیت">
            <option value="">---</option>
            </select>
            <span asp-validation-for="DocumentOwnershipTypeId" class="text-danger"></span>
            </div>*@
            @*            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
            <div>
            <label>
            ریشه سند
            </label>
            </div>
            <select asp-for="DocumentRootTypeId" class="form-control input-sm"
            placeholder="ریشه سند">
            <option value="">---</option>
            </select>
            <span asp-validation-for="DocumentRootTypeId" class="text-danger"></span>
            </div>*@

        </div>
        <div class="row">
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="ConsultantUserId">
                        نام واسط/شماره تماس
                    </label>
                </div>
                <select asp-for="ConsultantUserId" class="form-control input-sm"
                        placeholder="نام واسط/شماره تماس">
                    <option value="">---</option>
                </select>
                <label class="lblNewPerson pointer" style="height: 15px;">
                    <img src="/images/add.png" data-placement="top" data-toggle="tooltip" title=""
                         class="" data-original-title="جدید">
                </label>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="OwnerId">
                        نام مالک/شماره تماس
                    </label>
                </div>
                <select asp-for="OwnerId" class="form-control input-sm"
                        placeholder="نام مالک/شماره تماس">
                    <option value="">---</option>
                </select>
                <label class="lblNewPerson pointer" style="height: 15px;">
                    <img src="/images/add.png" data-placement="top" data-toggle="tooltip" title=""
                         class="" data-original-title="جدید">
                </label>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="Area">
                        مساحت
                    </label>
                </div>
                <input asp-for="Area" class="form-control input-sm"
                       placeholder="مساحت" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

        </div>
        @*        <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
        <div>
        <label>
        عمومی/خصوصی
        </label>
        </div>
        <select asp-for="IsPrivate" class="form-control input-sm"
        placeholder="عمومی/خصوصی">
        <option value="">عمومی</option>
        <option value="">خصوصی</option>
        </select>
        <span asp-validation-for="IsPrivate" class="text-danger"></span>
        </div>*@
        <div class="form-group col col-md-6 col-lg-6 col-xs-12 col-sm-12">
            <div>
                <label for="PropertyDescriptions">
                    توضیحات تکمیلی
                </label>
            </div>
            <textarea asp-for="PropertyDescriptions" class="form-control input-sm" rows="5"
                      placeholder="توضیحات تکمیلی"></textarea>
        </div>
    </div>
    <div class="row roundedBlock">
        <label>
            قیمت
        </label>
        <div class="row">
            <div class="form-group col col-md-2 col-lg-2 col-xs-12 col-sm-12">
                <div>
                    <label for="OfferPrice">
                        قیمت پیشنهادی
                    </label>
                    <span id="spnOfferPrice"></span>
                </div>
                <input asp-for="MyPropertiesPricesHistoriesVM.FirstOrDefault().OfferPrice" class="form-control input-sm"
                       placeholder="قیمت پیشنهادی" />
                <span asp-validation-for="MyPropertiesPricesHistoriesVM.FirstOrDefault().OfferPrice" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-2 col-lg-2 col-xs-12 col-sm-12">
                <div>
                    <label for="OfferPriceType">
                        نوع قیمت
                    </label>
                </div>
                <select asp-for="MyPropertiesPricesHistoriesVM.FirstOrDefault().OfferPriceType" class="form-control input-sm"
                        placeholder="نوع قیمت">
                    <option value="0">متری بر مبنای میلیون</option>
                    <option value="1">کل بر مبنای میلیارد</option>
                </select>
                <span asp-validation-for="MyPropertiesPricesHistoriesVM.FirstOrDefault().OfferPriceType" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-2 col-lg-2 col-xs-12 col-sm-12">
                <div>
                    <label for="CalculatedOfferPrice">
                        قیمت محاسبه شده
                    </label>
                    <span id="spnCalculatedOfferPrice"></span>
                </div>
                <input asp-for="MyPropertiesPricesHistoriesVM.FirstOrDefault().CalculatedOfferPrice" class="form-control input-sm" readonly
                       placeholder="قیمت محاسبه شده" />
                <span asp-validation-for="MyPropertiesPricesHistoriesVM.FirstOrDefault().CalculatedOfferPrice" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row roundedBlock">
        <label>
            موقعیت
        </label>
        <div class="row">
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="PropertyAddressVM_StateId">
                        استان
                    </label>
                </div>
                <select asp-for="MyPropertyAddressVM.StateId" class="form-control input-sm"
                        placeholder="استان">
                    <option value="">---</option>
                </select>
                <span asp-validation-for="MyPropertyAddressVM.StateId" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="PropertyAddressVM_CityId">
                        بخش
                    </label>
                </div>
                <select asp-for="MyPropertyAddressVM.CityId" class="form-control input-sm"
                        placeholder="بخش">
                    <option value="">---</option>
                </select>
                <span asp-validation-for="MyPropertyAddressVM.CityId" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-3 col-lg-3 col-xs-12 col-sm-12">
                <div>
                    <label for="PropertyAddressVM_ZoneId">
                        شهر/منطقه
                    </label>
                </div>
                <select asp-for="MyPropertyAddressVM.ZoneId" class="form-control input-sm"
                        placeholder=" شهر/منطقه">
                    <option value="">---</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col col-md-6 col-lg-6 col-xs-12 col-sm-12">
                <div>
                    <label for="PropertyAddressVM_Address">
                        آدرس
                    </label>
                </div>
                <textarea asp-for="MyPropertyAddressVM.Address" class="form-control input-sm" rows="3"
                          placeholder="آدرس"></textarea>
                <span asp-validation-for="MyPropertyAddressVM.Address" class="text-danger"></span>
            </div>
            <div class="form-group col col-md-4 col-lg-4 col-xs-12 col-sm-12">
                <label class="col-lg-12">
                    &nbsp;
                </label>
                <button class="btn btn-default input-sm" type="submit">
                    ارسال
                </button>
                <button id="btnReset" name="btnReset" class="btn btn-default input-sm" data-toggle="tooltip" data-placement="top"
                        title="پاک کردن فرم">
                    <i class="fa fa-undo"></i>
                </button>
            </div>
        </div>
    </div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="create-person-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">تعریف مالک/واسط</h4>
                <div class="row">
                    <div class="col col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div>
                            <label>
                                نام
                            </label>
                        </div>
                        <input class="form-control input-sm" id="txtName" name="txtName" placeholder="نام">
                    </div>
                    <div class="col col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div>
                            <label>
                                نام خانوادگی
                            </label>
                        </div>
                        <input class="form-control input-sm" id="txtFamily" name="txtFamily" placeholder="نام خانوادگی">
                    </div>
                    <div class="col col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div>
                            <label>
                                شماره تماس
                            </label>
                        </div>
                        <input class="form-control input-sm" id="txtPhone" name="txtPhone" placeholder="شماره تماس">
                    </div>
                    <div class="col col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div>
                            <label>
                                مالک/واسط
                            </label>
                        </div>
                        <select class="form-control input-sm" id="slcPersonTypeId" name="slcPersonTypeId"
                                placeholder="مالک/واسط">
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="modal-btn-no" data-dismiss="modal">لغو</button>
                <button type="button" class="btn btn-primary btn-Create-person" id="modal-btn-yes">ثبت</button>
            </div>
        </div>
    </div>
</div>

