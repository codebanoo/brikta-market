<script type="text/javascript">
    @{

        List<FeaturesCategoriesVM> FeaturesCategoriesList = new List<FeaturesCategoriesVM>();

        @Html.Raw("var FeaturesCategoriesList = [];")
        ;

        if (ViewData["FeaturesCategoriesList"] != null)
        {
            FeaturesCategoriesList = (List<FeaturesCategoriesVM>)ViewData["FeaturesCategoriesList"];

            var featuresCategoriesListData = FeaturesCategoriesList.Select(c =>
                      new
                      {
                          DisplayText = $"{c.FeatureCategoryTitle}",
                          Value = c.FeatureCategoryId
                      });

            @Html.Raw("debugger; FeaturesCategoriesList = " + JsonConvert.DeserializeObject(JsonConvert.SerializeObject(featuresCategoriesListData)) + "; debugger;")
            ;
        }

    }
</script>



