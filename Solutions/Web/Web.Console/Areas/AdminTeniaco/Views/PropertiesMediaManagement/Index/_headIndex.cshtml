@using VM.Public;
@using VM.Teniaco;
@using Newtonsoft.Json;

<script type="text/javascript">
    @{
        PropertiesVM propertiesVM = new PropertiesVM();

        @Html.Raw("var propertiesVM;")
        ;

        if (ViewData["PropertiesVM"] != null)
        {
            propertiesVM = ViewData["PropertiesVM"] as PropertiesVM;

            @Html.Raw(" propertiesVM = " +
        JsonConvert.DeserializeObject(JsonConvert.SerializeObject(propertiesVM)) + "; ")
            ;
        }
    }
</script>

<script type="text/javascript">
    @{
        string domainName = "";

        @Html.Raw("var domainName;")
        ;

        if (ViewData["DomainName"] != null)
        {
            domainName = ViewData["DomainName"] as string;

            @Html.Raw(" domainName = '" + domainName + "'; ")
            ;
        }
    }
</script>

