@using VM.Console;

@model CustomChangePassword

<form data-ajax-begin="OnBegin" data-ajax-complete="OnComplete"
      data-ajax-failure="OnFailed" data-ajax-success="OnSuccess"
      data-ajax="true" data-ajax-method="POST">
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group col col-md-12">
            @{
                <div id='error-alert' class="form-group alert alert-danger">
                </div>
            }
        </div>
        <div class="form-group col col-md-12">
            <span>رمز عبور</span>
            <br />
            <input type="password" asp-for="OldPassword" class="form-control input-sm"
                   placeholder="رمز قبلی" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group col col-md-12">
            <span>رمز جدید</span>
            <br />
            <input type="password" asp-for="NewPassword" class="form-control input-sm"
                   placeholder="رمز جدید" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group col col-md-12">
            <span>تکرار رمز</span>
            <br />
            <input type="password" asp-for="ReplyPassword" class="form-control input-sm"
                   placeholder="تکرار رمز" />
            <span asp-validation-for="ReplyPassword" class="text-danger"></span>
        </div>
        <div class="col col-md-12">
            <button class="col col-md-2 btn btn-default input-sm" type="submit">ارسال
            </button>
        </div>
        @*<button class="col col-md-2 btn btn-default btn-success" type="submit">
                @Html.Raw(pageTexts.FirstOrDefault(p => p.PropertyName.Equals("Submit")).Value)
            </button>*@
    </fieldset>
</form>