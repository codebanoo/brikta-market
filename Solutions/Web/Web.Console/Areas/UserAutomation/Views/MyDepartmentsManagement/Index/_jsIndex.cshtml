                                currentPage: $('#listContainer').jtable('getCurrentPage'),
                                'NewsId': newsId
                            });
                        }
                        else
                            if (result.Result == "ERROR") {
                                $('#my-warning-modal').find('.modal-title').html(ErrorTitle);
                                $('#my-warning-modal').find('#error').html(ErrorMessage);
                                $('#my-warning-modal').modal("show");
                            }
                    },
