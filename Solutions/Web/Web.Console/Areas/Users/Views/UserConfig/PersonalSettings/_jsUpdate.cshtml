<script type="text/javascript">
        $(document).ready(function () {
            $('#error-alert').hide(100);

            $('#IsResponsiveList').chosen({
                placeholder_text_single: ' ',
                placeholder_text_multiple: ' ',
                rtl: rtl
            });

            @*$('#FontName').val('@Model.FontName').trigger("chosen:updated");
            $('#ThemeName').val('@Model.ThemeName').trigger("chosen:updated");
            $('#JtableThemeName').val('@Model.JtableThemeName').trigger("chosen:updated");
            $('#PageFontSize').val('@Model.PageFontSize').trigger("chosen:updated");
            $('#JtableFontSize').val('@Model.JtableFontSize').trigger("chosen:updated");
            $('#Language').val('@Model.Language').trigger("chosen:updated");
            $('#Language').change();
            $('#UiName').val('@Model.UiName').trigger("chosen:updated");
            $('#IsResponsiveList').val('@Model.IsResponsiveList').trigger("chosen:updated");*@
        });

        function OnBegin() {
            //$('#AjaxLoading').show();
            return true;
        }

        function OnSuccess(response, status, xhr) {
            debugger;
            if (response.Result == 'OK') {
                $('#error-alert').removeClass('alert-danger');
                $('#error-alert').addClass('alert-success');
                window.setTimeout(function () {
                    location.reload(true);
                }, 3000);
            }
            else {
                $('#error-alert').removeClass('alert-success');
                $('#error-alert').addClass('alert-danger');
            }
            $("html, body").animate({ scrollTop: 0 }, "slow");
            $('#error-alert').show(1000);
            $('#error-alert').html(response.Message);
            $('#error-alert').show(500);
            //$('#AjaxLoading').hide();
        }

        function OnComplete() {
            clearValidationSummary();
        };

        function OnFailed(context) {
            debugger;
            $('#error-alert').removeClass('alert-success');
            $('#error-alert').addClass('alert-danger');
            $('#error-alert').html(context.Message);
            $('#error-alert').show(500);
            //$('#AjaxLoading').hide();
        };
</script>