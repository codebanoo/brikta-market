@using VM.Melkavan
@using VM.Public;
@using Newtonsoft.Json

@{
    ViewData["Title"] = "جزئیات آگهی";
}
@{
    string domainName = "";
    if (ViewData["DomainName"] != null)
        domainName = ViewData["DomainName"] as string;
}

<script>
    var domainName = "@domainName";
    var isAuthenticated = "@User.Identity.IsAuthenticated" == 'True';
</script>

<script type="text/javascript">
    @{
        AdvertisementVM advertisementVM = new AdvertisementVM();

        @Html.Raw("var advertisement = {};")
        ;

        if (ViewData["AdvertisementVM"] != null)
        {

            advertisementVM = (AdvertisementVM)ViewData["AdvertisementVM"];


            @Html.Raw("advertisement = " +
                 JsonConvert.DeserializeObject(JsonConvert.SerializeObject(advertisementVM)) + ";debugger; ")
            ;
        }
    }
</script>
